  "main": "dist/index.js",
  "repository": "https://github.com//.git",
  "scripts": {
    "dev": "rm -rf dist && mkdir dist && touch dist/index.js && NODE_ENV=development concurrently \"yarn webpack\" \"nodemon -r dotenv/config dist/index.js dotenv_config_path=.env.development --trace-warnings\"",
    "build": "rm -rf dist && NODE_ENV=production yarn webpack",
    "start": "NODE_ENV=production node -r dotenv/config dist",
    "test": "NODE_ENV=test ts-node -r dotenv/config test/index.ts dotenv_config_path=.env.test --trace-warnings --watch test",
    "format": "prettier . --write --ignore-path .gitignore",
    "lint": "eslint . --fix --ignore-path .gitignore",
    "type": "tsc --pretty --noEmit",
    "pre-push": "yarn format && yarn lint && yarn type",
    "postinstall": "[ -d '.husky' ] && husky install || true"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "koa": "^2.13.3",
    "koa-router": "^10.1.1",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "@types/node": "^16.10.2",
    "@types/pg": "^8.6.1",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "concurrently": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.0",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "webpack": "^5.55.1",
    "webpack-cli": "^4.8.0"
  },
  "engines": {
    "node": ">=16.10.0"
  },
  "private": true
}
